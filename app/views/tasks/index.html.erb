<h1>タスク一覧</h1>

<% if @tasks.any? %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>

<% @tasks.each do |task| %>

        <tr>
          <td><%= task.id %></td>
          <td><%= task.status %></td>
          <td><%= link_to task.content, task %></td>
<% end %>
    </tbody>
  </table>
  

<div>
<%= paginate @tasks %>
</div>

<% end %>

<%= link_to '新規タスクの登録', new_task_path, class: "btn btn-primary" %>